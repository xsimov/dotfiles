alias ls='ls -lahG'
alias be='bundle exec'
alias rubocurrent='bundle exec rubocop $(git status | egrep modified.*rb | sed s/modified://)'
alias fco='git checkout $(git branch | fzf)'
alias gitcurrentbranch='git branch --abbrev | grep "*" | sed -E "s/\* //"'

unsetopt nomatch
